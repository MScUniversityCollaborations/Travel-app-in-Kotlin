<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MyApp.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <!-- Custom margin -->
        <item name="android:layout_margin">0dp</item>
        <!-- Custom padding -->
        <item name="android:padding">0dp</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/core_sans_cr_45_regular</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextViewBold">
        <item name="android:fontFamily">@font/core_sans_cr_65_bold</item>
        <item name="android:textColor">@color/colorSecondary3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
