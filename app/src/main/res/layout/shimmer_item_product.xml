<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_Main"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    tools:ignore="ContentDescription">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/cardView_2"
                android:layout_width="32dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorSecondary2"
                app:layout_constraintStart_toStartOf="@+id/imgView_Icon"
                app:layout_constraintTop_toTopOf="parent"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/actionBar_Checkbox_Favorite"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@drawable/selector_img_btn_favorite"
                android:focusable="true"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:layout_gravity="end"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_Stock"
                app:layout_constraintEnd_toEndOf="@+id/imgView_Icon"
                app:layout_constraintTop_toTopOf="@+id/cardView_Stock" />

        </LinearLayout>

    <View
        android:id="@+id/imgView_Icon"
        android:layout_width="88dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="@color/colorSecondary2"/>

    <View
        android:id="@+id/cardView_3"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorSecondary2" />

    <View
        android:id="@+id/cardView_4"
        android:layout_height="18dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorSecondary2"/>
</LinearLayout>
